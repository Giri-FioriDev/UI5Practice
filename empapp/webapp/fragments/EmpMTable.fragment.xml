<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Table items="{oViewModel>/EmployeeItems}">
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>title} ({oViewModel>/EmployeeItems/length})"></Title>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column width="4%">
                <Text text="{i18n>col.empid}"></Text>
            </Column>
            <Column width="8%">
                <Text text="{i18n>col.name}"></Text>
            </Column>
            <Column width="6%">
                <Text text="{i18n>col.desig}"></Text>
            </Column>
            <Column width="3%">
                <Text text="{i18n>col.skill}"></Text>
            </Column>
            <Column width="12%">
                <Text text="{i18n>col.email}"></Text>
            </Column>
            <Column width="9%">
                <Text text="{i18n>col.status}"></Text>
            </Column>
            <Column width="8%">
                <Text text="{i18n>col.salary}"></Text>
            </Column>
            <Column width="4%">
                <Text text="{i18n>col.jlevel}"></Text>
            </Column>
            <Column width="5%">
                <Text text="{i18n>col.location}"></Text>
            </Column>
            <Column width="8%">
                <Text text="{i18n>col.rating}"></Text>
            </Column>
            <Column width="5%">
                <Text text="{i18n>col.project}"></Text>
            </Column>
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <Text text="{oViewModel>Empid}"></Text>
                <Text text="{oViewModel>Name}" wrapping="true" maxLines="2"></Text>
                <Text text="{oViewModel>Desig}" wrapping="true" maxLines="2"></Text>
                <Text text="{oViewModel>Skill}"></Text>
                <Text text="{oViewModel>Email}" wrapping="true" maxLines="2"></Text>
                <ObjectStatus class="statusAlign" text="{oViewModel>Status}" state="{path:'oViewModel>Status', formatter:'.formatter.formatStatusState'}" inverted="true"></ObjectStatus>
                <Text text="â‚¹{oViewModel>Salary}"></Text>
                <Text text="{oViewModel>Jlevel}"></Text>
                <Text text="{oViewModel>Location}" wrapping="true" maxLines="2"></Text>
                <RatingIndicator value="{oViewModel>Rating}" editable="false" tooltip="{path:'oViewModel>Rating', formatter:'.formatter.formatRating'}"></RatingIndicator>
                <Text text="{oViewModel>Project}" wrapping="true" maxLines="2"></Text>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
